{
    "name": "exsyst/worker",
    "type": "library",
    "description": "Worker subprocess management",
    "license": "Apache-2.0",
    "authors": [
        {
            "name": "EXSyst"
        }
    ],
    "minimum-stability": "dev",
    "require": {
        "php": ">=5.5",
        "exsyst/io": ">=0.1 <0.2",
        "symfony/process": "~2.3|~3.0"
    },
    "require-dev": {
        "symfony/phpunit-bridge": "~2.8|~3.0",
        "react/event-loop": ">=0.1 <0.5"
    },
    "suggest": {
        "react/event-loop": "Allows spawning evented (and shared) workers",
        "symfony/console": "For the standalone bin/check_shared_worker command"
    },
    "autoload": {
        "psr-4": {
            "EXSyst\\Component\\Worker\\": ""
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "0.1.x-dev"
        }
    }
}
